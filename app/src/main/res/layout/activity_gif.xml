<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.fz.imageloader.widget.RatioImageView
            android:id="@+id/riv_image_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            app:riv_error="@mipmap/ic_loading_fail"
            app:riv_grayScale="true"
            app:riv_placeholder="@drawable/ic_android_placehold"
            app:riv_scaleType="centerCrop" />

        <com.fz.imageloader.widget.RatioImageView
            android:id="@+id/riv_image_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:riv_error="@mipmap/ic_loading_fail"
            app:riv_grayScale="true"
            app:riv_isBlur="true"
            app:riv_placeholder="@drawable/ic_android_placehold" />

        <com.fz.imageloader.widget.RatioImageView
            android:id="@+id/riv_image_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:riv_error="@mipmap/ic_loading_fail"
            app:riv_placeholder="@drawable/ic_android_placehold" />

        <com.fz.imageloader.widget.RatioImageView
            android:id="@+id/riv_image_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:riv_error="@mipmap/ic_loading_fail"
            app:riv_placeholder="@drawable/ic_android_placehold" />

        <com.fz.imageloader.widget.RatioImageView
            android:id="@+id/riv_image_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:riv_error="@mipmap/ic_loading_fail"
            app:riv_grayScale="true"
            app:riv_placeholder="@drawable/ic_android_placehold"
            app:riv_roundedMargin="3dp"
            app:riv_roundedRadius="15dp" />

        <com.fz.imageloader.widget.RatioImageView
            android:id="@+id/riv_image_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/riv_image_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>